<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CustomView" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="donut_pie_chart_style">@style/ThemeDonutPieChartStyle</item>
    </style>

    <style name="Theme.CustomView" parent="Base.Theme.CustomView" />

    <style name="ThemeDonutPieChartStyle">
        <item name="stroke_width">50dp</item>
        <item name="text_position">0.85</item>
        <item name="text_color">?attr/colorOnBackground</item>
    </style>
</resources>