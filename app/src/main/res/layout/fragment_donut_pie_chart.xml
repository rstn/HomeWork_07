<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".DonutPieChartFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <otus.homework.customview.piechart.DonutPieChart
            android:id="@+id/pie_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            app:stroke_width="100.dp"
            app:text_position="0.5"
            app:text_color="#FF00FF" />

        <otus.homework.customview.piechart.DonutPieChart
            android:id="@+id/pie_chart_wrap_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            app:stroke_width="80.dp"
            style="@style/DonutPieChartStyle" />

        <otus.homework.customview.piechart.DonutPieChart
            android:id="@+id/pie_chart_fixed_w"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeDonutPieChartStyle" />

        <otus.homework.customview.piechart.DonutPieChart
            android:id="@+id/pie_chart_fixed_h"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
    </LinearLayout>
</ScrollView>